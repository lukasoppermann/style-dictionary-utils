{
  "name": "style-dictionary-utils",
  "version": "2.0.5",
  "type": "module",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukasoppermann/style-dictionary-utils.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Utilities to use in your style dictionary config",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "main": "dist-cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist-cjs/index.js"
    }
  },
  "files": [
    "dist/*",
    "dist-cjs/*",
    "src/**/*.ts"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest && npm run lint",
    "lint": "npx eslint . --ext .ts",
    "fix": "npx eslint . --ext .ts --fix",
    "clean:dist": "rm -rf dist/",
    "prebuild": "npm run clean:dist",
    "build": "tsc && tsc -p tsconfig-esm.json",
    "preversion": "npm run build && npm run test",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "design token",
    "style dictionary",
    "design system"
  ],
  "author": "Lukas Oppermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukasoppermann/style-dictionary-utils/issues"
  },
  "homepage": "https://github.com/lukasoppermann/style-dictionary-utils#readme",
  "devDependencies": {
    "@prettier/sync": "^0.3.0",
    "@types/jest": "^29.2.4",
    "color2k": "^2.0.0",
    "eslint": "^8.24.0",
    "eslint-plugin-github": "^4.3.7",
    "jest": "^29.7.0",
    "json5": "^2.2.1",
    "style-dictionary": "4.0.0-prerelease.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}